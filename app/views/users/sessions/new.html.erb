
 <div class="block">
   <center><%= render '/shared/public_logo_and_nav' %></center>
     <div class="top-sps">
        <div class="container">
            <h2 class="center">Welcome Back!</h2>
            <div class="row align-items-center h-100">
            <div class="col-md-6 col-sm-6">
            <div class="img-sec">
            <img src="/assets/login.jpg">
            </div>
            </div>
                <div class="col-md-6 col-sm-6 content-center">
                    <div class="box_sign text-color-white equal-height back-design">
                    
                          <%= form_for resource, as: resource_name, url: session_path(resource_name),
                        html: { class: "form-horizontal center"} do |f| %>
                            <div class="form-group">
                                <%= f.email_field :email, autofocus: true, placeholder: "Email Address", class: "form-control", :autocomplete => :off %>
                            </div><!-- /.form-group -->
                            <div class="form-group">
                                <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "form-control" %>
                            </div><!-- /.form-group -->
                            <div class="form-group">
                             <% if devise_mapping.rememberable? -%>
							  
								<div class="col-sm-10 p-0">
								  <div class="checkbox pull-left">
									<label>
									  <%= f.check_box :remember_me %> Remember me
									</label>
								  </div>
								</div>
							  
							<% end -%>
							<div class="actions logintop">
							  <%= f.submit "Log in", class: "btn btn-default btn-white loginwidth" %>
							</div>
							</div>
                            <div id="form-status" class="pull-left"></div>
                         <% end %>
                         
                        <div class="bg bg-color-default"></div>
                        
                    </div>
                    <div class="col-md-12">
						<%= render "devise/shared/links" %>
						</div>
                </div>
           
            </div>
        </div>
        <!--/ .container-->
        <div class="bg"></div><!--/ .bg-->
    </div>
   </div>  
